@model CourseCreateModel
@{
    ViewData["Title"] = "Update Course";
}
<br />
<br />
<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-6">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="col-6">
        </div>
    </div>
</div>

<div>
    @if (!String.IsNullOrEmpty(ViewBag.Message))
    {
        var statusMessageClass = ViewBag.isOk == false ? "danger" : "success";
        <div class="alert alert-@statusMessageClass alert-dismissible" role="alert">
            <p>@ViewBag.Message</p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

<div class="row">
    <!-- Column -->
    <div class="col-12">
        <!-- Card -->
        <div class="card">
            <div class="card-header p-2">
                <h3 class="card-title mr-10 ml-20 mt-10">Update General Information</h3>
                <div class="float-right">
                    <a class="btn btn-primary " asp-action="UpdateContent" asp-controller="Course" asp-area="instructor" asp-route-id="@Model.Id" asp-route-message=@null>

                        Update Contents
                    </a>
                    &nbsp;
                    <a type="button" id="addMemberBtn" class="btn bg-gradient-info btn-flat"
                       asp-area="Instructor" asp-controller="Course" asp-action="CreateContent" asp-route-id="@Model.Id">
                        Add more content
                    </a>
                </div>
                
            </div><!-- /.card-header -->
            <div class="card-body">
                <div class="tab-content">
                    <div class="card card-info">
                        <!-- form start -->
                        <form class="form-horizontal" method="post" asp-antiforgery="true" asp-action="Update" asp-controller="Course" asp-area="Instructor" enctype="multipart/form-data">
                            <div class="card-body">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <input type="hidden" class="form-control" asp-for="Id" placeholder="Course Title">
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="Title">Course Title</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" asp-for="Title" placeholder="Course Title" required>
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="Category">Select Category</label>
                                    <div class="col-sm-4">
                                        <select asp-for="Category" class="form-control" required>
                                            @foreach (var category in Model.CategoryList)
                                            {
                                                <option value="@category">@category</option>
                                            }
                                        </select>
                                        <span asp-validation-for="Category" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="Difficulities">Select Difficulity</label>
                                    <div class="col-sm-4">
                                        <select asp-for="Difficulities" class="form-control" required>
                                            <option value="Easy">Easy</option>
                                            <option value="Medium">Medium</option>
                                            <option value="Hard">Hard</option>
                                        </select>
                                        <span asp-validation-for="Category" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="Duration">Approximate Duration <br />(in hours)</label>

                                    <div class="col-sm-4">
                                        <input type="number" class="form-control" asp-for="Duration" placeholder="minuites" required>
                                        <span asp-validation-for="Duration" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="Fee">Course Fee</label>
                                    <div class="col-sm-4">
                                        <input type="number" class="form-control" asp-for="Fee" placeholder="Course Fee" required>
                                        <span asp-validation-for="Fee" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="Description">Description</label>
                                    <div class="col-sm-4">
                                        <textarea id="inputMessage" class="form-control" rows="4" asp-for="Description" placeholder="Course Description" required> </textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="ThumbnailFile">Thumbnail</label>
                                    <div class="position-relative overflow-hidden">
                                        <img class="img-fluid" src="/uploads/img/@Model.ThumbnailUrl" alt="">
                                    </div>
                                    <div class="col-sm-4">
                                        <input asp-for="ThumbnailFile"/>
                                        <span asp-validation-for="ThumbnailFile" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-success float-right" style="margin-left: 26px;">Update Course</button>
                                    <button class="btn btn-default float-right" type="reset" value="Reset"
                                            onclick="location.href='@Url.Action("Index", "Course", new { Area = "Instructor" })'">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.tab-content -->
            </div><!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.column -->
</div>
<!-- /.row -->


