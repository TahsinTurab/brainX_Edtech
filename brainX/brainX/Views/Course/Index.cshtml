@model CourseViewModel
@{
    ViewData["Title"] = "All Courses";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Courses</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a asp-area="" asp-controller="" asp-action="" class="btn btn-primary">
                    Create Course Using AI
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="row">
                    <div class="col-6">
                        <div class="btn-group">
                            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span>Filter by Category</span>
                            </button>

                            <div class="dropdown-menu">
                                <a asp-area="" asp-controller="Course" asp-action="Index" asp-route-message="all" class="dropdown-item">
                                    All
                                </a>
                                @foreach (var category in Model.CategoryList)
                                {
                                    <a asp-area="" asp-controller="Course" asp-action="Index" asp-route-message="@category" class="dropdown-item">
                                        @category
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <section class="content">

            <!-- Default box -->
            <div class="card card-solid">
                <div class="card-body pb-0">
                    <div class="row">

                        @foreach (var course in Model.MyCourses)
                        {
                            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column wow fadeInUp" data-wow-delay="0.1s">
                                <div class="course-item card bg-light d-flex flex-fill">
                                    <div class="position-relative overflow-hidden">
                                        <img class="img-fluid" src="/uploads/img/@course.ThumbnailUrl" alt="">
                                    </div>
                                    <div class="text-center p-4 pb-0">
                                        <h3 class="mb-0">৳@course.Fee</h3>
                                        <h5 class="mb-4">@course.Title</h5>
                                        
                                    </div>
                                    <div class="d-flex border-top">
                                        <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>@course.Duration Hrs</small>
                                        <small class="flex-fill text-center border-end py-2">@course.Difficulities</small>
                                    </div>
                                    <div class="card-footer">
                                        <div class="text-right">
                                            <a asp-area="" asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" class="btn btn-primary">
                                                Show Details &nbsp; <i class="fas fa-arrow-right"></i>
                                            </a>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <nav aria-label="Contacts Page Navigation">
                        <ul class="pagination justify-content-center m-0">
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>

                        </ul>
                    </nav>
                </div>
                <!-- /.card-footer -->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
</section>
