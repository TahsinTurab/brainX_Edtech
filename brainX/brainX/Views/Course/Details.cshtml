@model CourseDetailsModel
@{
    ViewData["Title"] = "Course Details";
}
 
<br>
<br>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-7">
            <div class="card card-outline card-info">
                <div class="card-header">
                    <span class="username">
                        <h2>@Model.Title</h2>
                    </span>
                    <span class="description">@Model.Category</span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 text-center">
                            <img class="img-fluid" src="/uploads/img/@Model.ThumbnailUrl" alt="Photo">
                        </div>
                    </div>
                    <div class="text-center p-4 pb-0">
                        <h3 class="mb-0">৳@Model.Fee</h3>
                        <p>@Model.Difficulities</p>
                    </div>
                    <div class="d-flex border-top">
                        <p class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>&nbsp;@Model.Duration Hrs</p>
                        <p class="flex-fill text-center py-2"><i class="fa fa-user text-primary me-2"></i>&nbsp;@Model.Students Students</p>
                    </div>
                    <div class="card-footer">
                        <div class="text-right">
                            <a asp-area="" asp-controller="Course" asp-action="Payment" asp-route-id="@Model.Id" class="btn btn-primary">
                                Enroll Now &nbsp; <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-md-5">
            <!-- Profile Image -->
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        Meet the instructor
                    </h3>
                </div>
                <div class="card-body box-profile">
                    <div class="text-center">
                        <img class="profile-user-img img-fluid img-circle"
                             src="/uploads/img/@Model.InstructorImageUrl"
                             alt="Instructor profile picture">
                    </div>

                    <h3 class="profile-username text-center">@Model.InstructorName</h3>
                </div>
            </div>
            <!-- /.card -->
            <!-- About Me Box -->
            <div class="card card-primary">
                <div class="card-header">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <h3 class="card-title">Show Content List</h3>&nbsp;<i class="fas fa-minus"></i>
                    </button>
                </div>
                <div class="card-body">
                    @foreach (var content in Model.ContentsList)
                    {
                        <h5>@content</h5>
                    }
                </div>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div><!-- /.container-fluid -->