@model CourseViewModel
@{
    ViewData["Title"] = "My Courses";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>My Courses</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a asp-area ="Instructor" asp-controller="Course" asp-action="Create" class="btn btn-sm btn-primary">
                    Create New Course
                </a>
            </div>
        </div>
        <div>
            @if (!String.IsNullOrEmpty(ViewBag.Message))
            {
                var statusMessageClass = ViewBag.isOk == false ? "danger" : "success";
                <div class="alert alert-@statusMessageClass alert-dismissible" role="alert">
                    <p>@ViewBag.Message</p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>

    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="row">
                    <div class="col-6">
                        <div class="btn-group">
                            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span>Filter by Category</span>
                            </button>

                            <div class="dropdown-menu">
                                <a asp-area="Instructor" asp-controller="Course" asp-action="Index" asp-route-message="all" class="dropdown-item">
                                    All
                                </a>
                                @foreach(var category in Model.CategoryList)
                                {
                                    <a asp-area="Instructor" asp-controller="Course" asp-action="Index" asp-route-message ="@category" class="dropdown-item">
                                        @category
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            <br />
        <section class="content">

            <!-- Default box -->
            <div class="card card-solid">
                <div class="card-body pb-0">
                    <div class="row">
                        
                        @foreach (var course in Model.MyCourses)
                        {
                            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column wow fadeInUp" data-wow-delay="0.1s">
                                <div class ="course-item card bg-light d-flex flex-fill">
                                    <div class="position-relative overflow-hidden text-center">
                                        <img class="img-fluid" src="/uploads/img/@course.ThumbnailUrl" alt="">
                                    </div>
                                    <div class="text-center p-4 pb-0">
                                        <h3 class="mb-0">৳@course.Fee</h3>
                                        <h5 class="mb-4">@course.Title</h5>
                                    </div>
                                    <div class="d-flex border-top">
                                        <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>@course.Duration Hrs</small>
                                        <small class="flex-fill text-center border-end py-2">@course.Difficulities</small>
                                    </div>
                                    <div class="card-footer">
                                        <div class="text-right">
                                            <!-- Button trigger modal -->
                                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                                Delete
                                            </button>

                                            <!-- Modal -->
                                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Be Careful!</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                           <p>Do you want to delete this course?</p>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                            <a asp-area="Instructor" asp-controller="Course" asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger">
                                                                Yes!
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <a asp-area="Instructor" asp-controller="Course" asp-action="Update" asp-route-id="@course.Id" asp-route-message=@null class="btn btn-primary">
                                                Update Course &nbsp; <i class="fas fa-arrow-right"></i>
                                            </a>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <nav aria-label="Contacts Page Navigation">
                        <ul class="pagination justify-content-center m-0">
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            
                        </ul>
                    </nav>
                </div>
                <!-- /.card-footer -->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
</section>