@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<br />
<h1>Dashboard</h1>
<!-- Main content -->
<div class="content">
    <div class="container">
        @if (!String.IsNullOrEmpty(ViewBag.Status))
        {
            <div class="alert alert-success" role="alert">
                <p>@ViewBag.Status</p>
            </div>
        }
        <div class="row">
            
            <div class="col-lg-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.TotalEarning<sup style="font-size: 20px">৳</sup></h3>

                        <p>Total Earnings</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>




                <!-- /.card -->

            </div>
            <div class="col-lg-6">



                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.CurrentBalance<sup style="font-size: 20px">৳</sup></h3>

                        <p>Current Balance</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="#" data-toggle="modal" data-target="#exampleModalCenter" class="small-box-footer">Withdraw Request <i class="fas fa-arrow-circle-right"></i></a>
                </div>


                <!-- /.card -->

            </div>
            
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content -->
<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Withdraw</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h4 class="section-title bg-white text-center text-primary px-3">Make Whithdraw</h4>
                    <div class="card-body">
                        <div class="card card-info">
                            <div class="card-header text-center">
                                <h5>Please read before you make a transection</h5>
                            </div>


                            <div class="card-body">
                                <ul>
                                    <li>You will get 70% of the total amount</li>
                                    <li>30% will be deducted for brainX authority</li>
                                    <li>Your money will be added in your acount within 3 working days</li>
                                    <li>For any kind of problem contact us at brainx.help@gmail.com</li>
                                </ul>
                            </div>

                        </div>
                        <div class="card-footer">
                        </div>

                    </div>
                </div>
                <br />
                <div class="text-center wow fadeInUp" data-wow-delay="0.4s">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card card-outline card-info">
                                    <div class="card-header">
                                        <span class="username">
                                            <h5>brainX Pay</h5>
                                        </span>
                                    </div>
                                    <div class="card-body">
                                        <div class="card card-info">
                                            <div class="card-header text-center">
                                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                                    <img class="" src="/img/mobile-banking.png" width="150px" alt="user image">
                                                    <br />
                                                    <h3 class="card-title">Mobile Banking</h3>&nbsp;</i>
                                                </button>
                                            </div>


                                            <div class="card-body" style="display: none;">
                                                <form class="form-horizontal" method="post" asp-antiforgery="true" asp-action="Withdraw" asp-controller="Dashboard" asp-area="Instructor" enctype="multipart/form-data">

                                                <label>Enter Mobile Number</label>
                                                <div class="input-group mb-3">
                                                    <input asp-for="AccountNumber" class="form-control" type="number" />
                                                    <div class="input-group-append">
                                                        <div class="input-group-text">
                                                            <span class="fas fa-phone-alt"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <label>Enter Withdraw Amount</label>
                                                <div class="input-group mb-3">
                                                    <input asp-for="TransferAmount" class="form-control" type="number" />
                                                    <div class="input-group-append">
                                                        <div class="input-group-text">
                                                            
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="text-right">
                                                    <button type="submit" class="btn btn-success float-right" style="margin-left: 26px;">Proceed</button>

                                                </div>
                                            </form>
                                            </div>
                                            
                                        </div>
                                        <div class="card-footer">
                                        </div>

                                    </div>
                                    <div class="card-body">
                                        <div class="card card-light">
                                            <div class="card-header text-center">
                                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                                    <img class="" src="/img/card.png" height="150px" width="150px" alt="user image">
                                                    <br />
                                                    <h3 class="card-title">Bank Payment</h3>&nbsp;</i>
                                                </button>
                                            </div>


                                                <div class="card-body" style="display: none;">
                                                    <form class="form-horizontal" method="post" asp-antiforgery="true" asp-action="Withdraw" asp-controller="Dashboard" asp-area="Instructor" enctype="multipart/form-data">

                                                    <label>Enter Acount Number</label>
                                                    <div class="input-group mb-3">
                                                        <input asp-for="AccountNumber" class="form-control" type="number" />
                                                        <div class="input-group-append">
                                                            <div class="input-group-text">
                                                                
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <label>Enter Withdraw Amount</label>
                                                    <div class="input-group mb-3">
                                                        <input asp-for="TransferAmount" class="form-control" type="number" />
                                                        <div class="input-group-append">
                                                            <div class="input-group-text">
                                                                
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="text-right">
                                                        <button type="submit" class="btn btn-success float-right" style="margin-left: 26px;">Proceed</button>

                                                    </div>
                                                </form>
                                                </div>
                                            
                                            

                                        </div>
                                        <div class="card-footer">
                                        </div>

                                    </div>
                                </div>
                            </div>


                           
                        </div>
                        <!-- /.row -->
                    </div><!-- /.container-fluid -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
               
            </div>
        </div>
    </div>
</div>
