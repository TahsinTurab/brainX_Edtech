@model AIModel
@{
    ViewData["Title"] = "AI Consultancy";
}
<br />
<br />
<div class="content">
        <div class="container">
          <div class="row">
            <form class="form-horizontal" method="post" asp-antiforgery="true" asp-action="Index" asp-controller="AI" asp-area="Student" enctype="multipart/form-data">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">AI Consultancy</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Subject</label>
                                        <input asp-for="SubjectName" type="text" class="form-control" id="exampleInputText" placeholder="Subject Name">
                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Course</label>
                                        <input asp-for="CourseName" type="text" class="form-control" id="exampleInputText" placeholder="Course Name">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Topics you know</label>
                                        <textarea asp-for="KnownTopic" id="inputMessage" class="form-control" rows="4" placeholder="Write all the topics name seperated by comma(,)"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Topics you want to learn</label>
                                        <textarea asp-for="LearnTopic" id="inputMessage" class="form-control" rows="4" placeholder="Write all the topics name seperated by comma(,)"></textarea>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <label>Course Dificulities</label>
                                    <div class="form-group clearfix">

                                        <div class="icheck-primary d-inline">
                                            <input asp-for="Dificulities" value="Beginner" type="checkbox" id="checkboxPrimary1">
                                            <label for="checkboxPrimary1">
                                                Beginner
                                            </label>

                                        </div> &nbsp;
                                        <div class="icheck-primary d-inline">
                                            <input asp-for="Dificulities" value="Intermediate" type="checkbox" id="checkboxPrimary2">
                                            <label for="checkboxPrimary2">
                                                Intermediate
                                            </label>
                                        </div> &nbsp;
                                        <div class="icheck-primary d-inline">
                                            <input asp-for="Dificulities" value="Advanced" type="checkbox" id="checkboxPrimary3">
                                            <label for="checkboxPrimary3">
                                                Advanced
                                            </label>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Time Duration</label>
                                        <select asp-for="Duration" class="form-control select2" style="width: 100%;">
                                            <option value="2">2 weeks</option>
                                            <option value="4">4 weeks</option>
                                            <option value="6">6 weeks</option>
                                            <option value="8">8 weeks</option>
                                            <option value="10">10 weeks</option>
                                            <option value="12">12 weeks</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#modal-success">
                                            Submit
                                        </button>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                            <!-- /.row -->
                        </div>
                        <!-- /.card-body -->
                    </div>


                </div>
            </form>
            <!-- /.col-md-6 -->
            
            <!-- /.col-md-6 -->
            
          </div>
          <!-- /.row -->
        </div><!-- /.container-fluid -->
        <div class="modal fade" id="modal-success">
            <div class="modal-dialog">
              <div class="modal-content bg-success">
                <div class="modal-header">
                  <h4 class="modal-title">Success</h4>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <p>Your Submission is in queue. Don't close the window. You will be redirect to course page after the Course Generation. <br>Thank You;</p>
                </div>
                <div class="modal-footer justify-content-between">
                  <button type="button" class="btn btn-outline-light" data-dismiss="modal">Close</button>
                  
                </div>
              </div>
              <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
          </div>
          <!-- /.modal -->
      </div>