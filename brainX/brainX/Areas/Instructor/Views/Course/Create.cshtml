@model CourseCreateModel
@{
    ViewData["Title"] = "Create Course";
}
<br />
<br />
<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-6">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="col-6">
        </div>
    </div>
</div>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <!-- Column -->
    <div class="col-12">
        <!-- Card -->
        <div class="card">
            <div class="card-header p-2">
                <h3 class="card-title mr-10 ml-20 mt-10">1. General</h3>
                <div class="card-title"><a class="nav-link" style="pointer-events: none">2. Contents</a></div>
            </div><!-- /.card-header -->
            <div class="card-body">
                <div class="tab-content">
                    <div class="card card-info">
                        <!-- form start -->
                        <form class="form-horizontal" method="post" asp-antiforgery="true" asp-action="Create" asp-controller="Course" asp-area="Instructor" enctype="multipart/form-data">
                            <div class="card-body">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="Title">Course Title</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" asp-for="Title" placeholder="Course Title" required>
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="Category">Select Category</label>
                                    <div class="col-sm-4">
                                        <select asp-for="Category" class="form-control" required>
                                            @foreach(var category in Model.CategoryList)
                                            {
                                                <option value="@category">@category</option>
                                            }
                                        </select>
                                        <span asp-validation-for="Category" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="Difficulities">Select Difficulity</label>
                                    <div class="col-sm-4">
                                        <select asp-for="Difficulities" class="form-control" required>
                                            <option value="Easy">Easy</option>
                                            <option value="Medium">Medium</option>
                                            <option value="Hard">Hard</option>
                                        </select>
                                        <span asp-validation-for="Category" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="Duration">Approximate Duration <br />(in hours)</label>
                                    
                                    <div class="col-sm-4">
                                        <input type="number" class="form-control" asp-for="Duration" placeholder="minuites" required>
                                        <span asp-validation-for="Duration" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="Fee">Course Fee</label>
                                    <div class="col-sm-4">
                                        <input type="number" class="form-control" asp-for="Fee" placeholder="Course Fee" required>
                                        <span asp-validation-for="Fee" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="Description">Description</label>
                                    <div class="col-sm-4">
                                        <textarea id="inputMessage" class="form-control" rows="4" asp-for="Description" placeholder="Course Description" required> </textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="ThumbnailFile">Thumbnail</label>
                                    <div class="col-sm-4">
                                        <input asp-for="ThumbnailFile" required/>
                                        <span asp-validation-for="ThumbnailFile" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-success float-right" style="margin-left: 26px;">Save Course</button>
                                    <button class="btn btn-default float-right" type="reset" value="Reset"
                                            onclick="location.href='@Url.Action("Index", "Course", new { Area = "Instructor" })'">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.tab-content -->
            </div><!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.column -->
</div>
<!-- /.row -->