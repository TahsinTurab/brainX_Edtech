@model TestCreateModel
@{
    ViewData["Title"] = "Create Test's Questions";
}
<br />
<br />
<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-6">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="col-6">
        </div>
    </div>
</div>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <!-- Column -->
    <div class="col-12">
        <!-- Card -->
        <div class="card">
            <div class="card-header p-2">
                <h3 class="card-title mr-10 ml-20 mt-10"> Information</h3></div><!-- /.card-header -->
            <div class="card-body">
                <div class="tab-content">
                    <div class="card card-info">
                        <!-- form start -->
                        <form class="form-horizontal" method="post" asp-antiforgery="true" asp-action="SetTest" asp-controller="Course" asp-area="Instructor" enctype="multipart/form-data">
                            <input type="hidden" class="form-control" asp-for="CourseId" value="@Model.CourseId">
                            <div class="card-body">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="Name">Test Title</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" asp-for="Name" placeholder="Test Title" required>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="TotalTime">Total Duration</label>

                                    <div class="col-sm-4">
                                        <input type="number" class="form-control" asp-for="TotalTime" placeholder="minuites" required>
                                        <span asp-validation-for="TotalTime" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="PracticalTask1">Practical Task 01 Statement</label>
                                    <div class="col-sm-4">
                                        <br /><textarea asp-for="PracticalTask1" id="inputMessage" class="form-control" rows="4"></textarea>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="PracticalTask2">Practical Task 02 Statement</label>
                                    <div class="col-sm-4">
                                        <br /><textarea asp-for="PracticalTask2" id="inputMessage" class="form-control" rows="4"></textarea>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-bottom: 12px;">
                                    <label class="col-sm-2 col-form-label" asp-for="PracticalTask3">Practical Task 03 Statement</label>
                                    <div class="col-sm-4">
                                        <br /><textarea asp-for="PracticalTask3" id="inputMessage" class="form-control" rows="4"></textarea>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-success float-right" style="margin-left: 26px;">Save Test</button>
                                    <button class="btn btn-default float-right" type="reset" value="Reset"
                                            onclick="location.href='@Url.Action("SetTest", "Course", new { Area = "Instructor" })'">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.tab-content -->
            </div><!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.column -->
</div>
<!-- /.row -->